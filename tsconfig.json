{
  "compilerOptions": {
    "target": "ES2020",                  // Use ES2020 for modern JavaScript
    "module": "ESNext",                   // Use ESNext for ESM modules
    "moduleResolution": "node",           // Node-style resolution
    "outDir": "./dist/esm",               // Output directory for ESM
    "declaration": true,                  // Generate TypeScript declaration files
    "esModuleInterop": true,              // Enable esModuleInterop for compatibility
    "strict": true,                       // Enable strict type-checking
    "sourceMap": true,                    // Generate source maps
    "skipLibCheck": true                  // Skip type checking of declaration files
  },
  "include": ["src/**/*"]                  // Include all files under src/
}
